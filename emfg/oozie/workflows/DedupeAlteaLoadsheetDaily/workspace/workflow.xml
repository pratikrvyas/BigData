<workflow-app name="DedupeAlteaLoadsheetDaily_UAT" xmlns="uri:oozie:workflow:0.5">
  <global>
            <configuration>
                <property>
                    <name>oozie.launcher.mapred.job.queue.name</name>
                    <value>opseff</value>
                </property>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>opseff</value>
                </property>
            </configuration>
  </global>
    <start to="shell-c324"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL_LIST}</to>
            <subject>${wf:name()} failed</subject>
            <body>Workflow Name: ${wf:name()} 
Current Timestamp: ${timestamp()}</body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="shell-c324">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>spark-execute.sh</exec>
              <argument>hdfs://${SPARK_JAR}</argument>
              <argument>${CLASS_NAME}</argument>
              <argument>${EXECUTOR_MEMORY}</argument>
              <argument>${DRIVER_MEMORY}</argument>
              <argument>${QUEUE}</argument>
              <argument>${MIN_EXECUTORS}</argument>
              <argument>${MAX_EXECUTORS}</argument>
              <argument>${PAYLOAD_HISTORY_SCHEMA_SYNC_PATH}</argument>
              <argument>${PAYLOAD_LOADSHEET_INCREMENTAL_PATH}</argument>
              <argument>${PAYLOAD_LOADSHEET_DEDUPE_HISTORY_LOCATION}</argument>
              <argument>${PAYLOAD_LOADSHEET_DEDUPE_CURRENT_LOCATION}_temp</argument>
              <argument>${COALESCE_VALUE}</argument>
              <argument>${LOOKBACK_MONTHS}</argument>
              <argument>${DATA_LOAD_MODE}</argument>
              <argument>${COMPRESSION}</argument>
            <file>spark-execute.sh#spark-execute.sh</file>
              <capture-output/>
        </shell>
        <ok to="fs-b5f3"/>
        <error to="Kill"/>
    </action>
    <action name="fs-b5f3">
        <fs>
              <delete path='${PAYLOAD_LOADSHEET_DEDUPE_CURRENT_LOCATION}'/>
              <move source='${PAYLOAD_LOADSHEET_DEDUPE_CURRENT_LOCATION}_temp' target='${PAYLOAD_LOADSHEET_DEDUPE_CURRENT_LOCATION}'/>
        </fs>
        <ok to="email-a5c7"/>
        <error to="Kill"/>
    </action>
    <action name="email-a5c7">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL_LIST}</to>
            <subject>${wf:name()} Successful</subject>
            <body>Workflow Name: ${wf:name()} 
Current Timestamp: ${timestamp()}</body>
            <content_type>text/plain</content_type>
        </email>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>