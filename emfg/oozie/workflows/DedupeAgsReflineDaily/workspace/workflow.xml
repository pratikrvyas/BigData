<workflow-app name="DedupeAgsReflineDaily" xmlns="uri:oozie:workflow:0.5">
  <global>
            <configuration>
                <property>
                    <name>oozie.launcher.mapred.job.queue.name</name>
                    <value>opseff</value>
                </property>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>opseff</value>
                </property>
            </configuration>
  </global>
    <start to="spark-fa83"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL_ADDRESS_LIST}</to>
            <subject>Workflow ${wf:name()} failed</subject>
            <body>Current timestamp: ${timestamp()}
Workflow name: ${wf:name()}
Workflow path: http://10.232.154.13:8888/oozie/list_oozie_workflow/${wf:id()}
Workflow application path: ${wf:appPath()}
Workflow user: ${wf:user()}
Last error action: ${wf:lastErrorNode()}
Error code: ${wf:errorCode(wf:lastErrorNode())}
Error message: ${wf:errorMessage(wf:lastErrorNode())}</body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="spark-fa83">
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <master>yarn</master>
            <mode>cluster</mode>
            <name>agsreflinededupedaily</name>
              <class>com.emirates.helix.AgsReflineDeDupeDriver</class>
            <jar>agsreflinededupedaily-1.0.jar</jar>
              <spark-opts>--files hive-site.xml --executor-memory 2g --driver-memory 1g --queue opseff --conf spark.serializer=org.apache.spark.serializer.KryoSerializer --conf spark.shuffle.service.enabled=true --conf spark.speculation=true --conf spark.dynamicAllocation.enabled=true --conf spark.dynamicAllocation.minExecutors=1 --conf spark.dynamicAllocation.maxExecutors=10 </spark-opts>
              <arg>-i</arg>
              <arg>${AGS_REFLINE_DEDUPE_CURRENT_PATH}</arg>
              <arg>-j</arg>
              <arg>${AGS_REFLINE_INCREMENTAL_PATH}</arg>
              <arg>-x</arg>
              <arg>${AGS_REFLINE_DEDUPE_CURRENT_PATH}_tmp</arg>
              <arg>-c</arg>
              <arg>${COMPRESSION}</arg>
              <arg>-p</arg>
              <arg>${COALESCE_VALUE}</arg>
        </spark>
        <ok to="fs-b704"/>
        <error to="Kill"/>
    </action>
    <action name="email-b888">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL_ADDRESS_LIST} </to>
            <subject>Workflow ${wf:name()} Completed Successfully</subject>
            <body>Workflow ${wf:name()} Completed Successfully</body>
            <content_type>text/plain</content_type>
        </email>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <action name="fs-b704">
        <fs>
              <delete path='${AGS_REFLINE_DEDUPE_CURRENT_PATH}'/>
              <move source='${AGS_REFLINE_DEDUPE_CURRENT_PATH}_tmp' target='${AGS_REFLINE_DEDUPE_CURRENT_PATH}'/>
        </fs>
        <ok to="email-b888"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>