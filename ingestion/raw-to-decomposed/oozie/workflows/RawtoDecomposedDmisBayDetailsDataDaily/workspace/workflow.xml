<workflow-app name="RawtoDecomposedDmisBayDetailsDaily" xmlns="uri:oozie:workflow:0.5">
    <start to="spark-89dc"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL_LIST}</to>
            <subject>${wf:name()} failed</subject>
            <body>Workflow Name: ${wf:name()} 
Current Timestamp: ${timestamp()}</body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="spark-89dc">
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <master>yarn</master>
            <mode>cluster</mode>
            <name>DMISBAYDETAILSR2D</name>
              <class>com.emirates.helix.DmisBayHistoryR2DDriver</class>
            <jar>dmis-bayhistory-r2d-1.0.jar</jar>
              <spark-opts>--executor-memory 512m --driver-memory 512m --conf spark.kryo.classesToRegister=com.emirates.helix.udf.UDF --conf spark.dynamicAllocation.minExecutors=5 --conf spark.dynamicAllocation.maxExecutors=30</spark-opts>
              <arg>-i</arg>
              <arg>${INPUT_HDFS_PATH}</arg>
              <arg>-o</arg>
              <arg>${OUTPUT_HDFS_PATH}</arg>
              <arg>-r</arg>
              <arg>${IN_FORMAT}</arg>
              <arg>-c</arg>
              <arg>${COMPRESSION}</arg>
              <arg>-s</arg>
              <arg>${OUT_FORMAT}</arg>
              <arg>-p</arg>
              <arg>${COALESCE_PARTITIONS}</arg>
        </spark>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>