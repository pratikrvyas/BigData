
<workflow-app name="RawToDecomposedPROMISHistory" xmlns="uri:oozie:workflow:0.5">
    <start to="shell-2fe1"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="email-e89b">
        <email xmlns="uri:oozie:email-action:0.1">
            <to>ksenia.suresh@emirates.com</to>
            <subject>Workflow ${wf:name()} failed</subject>
            <body>Current timestamp: ${timestamp()}
Workflow name: ${wf:name()}
Workflow id: ${wf:id()}
Workflow application path: ${wf:appPath()}
Workflow user: ${wf:user()}
Last error action: ${wf:lastErrorNode()}
Error code: ${wf:errorCode(wf:lastErrorNode())}
Error message: ${wf:errorMessage(wf:lastErrorNode())}</body>
        </email>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
    <action name="shell-2fe1">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>read_avro_schema.sh</exec>
              <argument>${TARGET_SCHEMA_PRMS_LEG_FCST_DATA}</argument>
            <file>read_avro_schema.sh#read_avro_schema.sh</file>
              <capture-output/>
        </shell>
        <ok to="pig-6749"/>
        <error to="email-e89b"/>
    </action>
    <action name="pig-6749">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <script>RawToDecomposed.pig</script>
              <param>SOURCE_DIRECTORY=${SOURCE_DIRECTORY_PRMS_LEG_FCST_DATA}</param>
              <param>SOURCE_SCHEMA_FILE=${SOURCE_SCHEMA_PRMS_LEG_FCST_DATA}</param>
              <param>TARGET_DIRECTORY=${TARGET_DIRECTORY_PRMS_LEG_FCST_DATA}</param>
              <param>TARGET_SCHEMA=${wf:actionData(&#39;shell-2fe1&#39;)[&#39;AVRO_SCHEMA&#39;]}</param>
            <file>RawToDecomposed.pig#RawToDecomposed.pig</file>
            <file>pigudf.jar#pigudf.jar</file>
        </pig>
        <ok to="End"/>
        <error to="email-e89b"/>
    </action>
    <end name="End"/>
</workflow-app>
